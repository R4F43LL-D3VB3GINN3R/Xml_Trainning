<mvc:View controllerName="sbx.controller.index" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:c="sap.ui.core"
          xmlns:f="sap.ui.layout.form">
    <Page id="page"
          showHeader="false">
          <content>
              <HBox fitContainer="true">
                  <VBox id="idVBox1"
                        width="50%"
                        alignItems="Center"
                        justifyContent="Center">
                        <VBox >
                          <Title text="Welcome Back" titleStyle="H1" class="sapUiLargeMarginBottom"/>  
                          <f:SimpleForm backgroundDesign="Transparent">
                            <f:content>
                              <Label text="User"/>
                              <Input />
                              <Label text="Password"/>
                              <Input type="Password" showValueHelp="true" valueHelpIconSrc="sap-icon://show" />
                            </f:content>
                          </f:SimpleForm>
                          <HBox justifyContent="SpaceBetween" alignItems="Center">
                              <HBox alignItems="Center">
                                <CheckBox />
                                <Label text="Keep Me Logged In"/>
                              </HBox>
                              <Link text="Forgot your password?" href="/"/>
                          </HBox>
                          <Button text="Login" type="Emphasized" width="100%"/>
                          <HBox justifyContent="Center" alignItems="Center" class="sapUiLargeMarginTop">
                              <Text text="Don't have an Account?" />
                              <Link text="Sign Up" href="/"/>
                          </HBox>
                    </VBox>
                  </VBox>
                  <VBox id="idVBox2"
                        width="50%"
                        backgroundDesign="Solid">
                        <VBox alignItems="End">               
                          <HBox alignItems="Center"
                                class="sapUiLargeMarginTop sapUiLargeMarginEnd">
                            <Avatar src="sap-icon://course-book"
                                    displayShape="Square" 
                                    class="sapUiSmallMarginEnd" />
                            <Title text="Welcome to My Login Page" 
                                  titleStyle="H2" />
                          </HBox>
                          <Title text="Created With SAPUI5" 
                                titleStyle="H5"
                                class="sapUiLargeMarginEnd"/>
                          <Button text="About" 
                                  class="sapUiLargeMarginEnd"/>
                        </VBox>
                        <VBox height="100%" justifyContent="Center" alignItems="Center">
                          <IllustratedMessage title="Make Your Login"
                                              description="Use your credentials to login"
                                              illustrationSize="Scene"
                                              illustrationType="sapIllus-AddPeople" />
                        </VBox>
                  </VBox>
              </HBox>
          </content>
    </Page>
</mvc:View>
